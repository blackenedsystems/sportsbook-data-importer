<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="categories-1" author="alantibbetts">
        <createTable tableName="category">
            <column name="id"
                    autoIncrement="true"
                    type="int"
                    remarks="Primary Key">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="default_name"
                    type="varchar(50)"
                    remarks="Name of this category in system default language">
                <constraints nullable="false"/>
            </column>

            <column name="created"
                    type="datetime"
                    remarks="Who created this row.">
                <constraints nullable="false"/>
            </column>

            <column name="created_by"
                    type="varchar(20)"
                    remarks="When this row was created (in UTC)">
                <constraints nullable="false"/>
            </column>

            <column name="updated"
                    type="datetime"
                    remarks="Last person to update this row.">
                <constraints nullable="false"/>
            </column>

            <column name="updated_by"
                    type="varchar(20)"
                    remarks="When the row was last updated (in UTC)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="category"/>
        </rollback>
    </changeSet>
</databaseChangeLog>